@page "/Definitions/Application/Record"
@model ArchiX.Library.Web.Pages.Definitions.ApplicationRecordModel
@{
    ViewData["Title"] = Model.IsNew ? "Yeni Application" : $"Application #{Model.Application?.Id}";
    Layout = "~/Templates/Modern/Pages/Shared/_Layout.cshtml";
}

<div id="tab-main" class="container py-4">
    <h1 class="h4 mb-3">@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="Code" class="form-label">Kod</label>
                    <input type="text" class="form-control" id="Code" name="Form.Code" value="@Model.Form?.Code" required maxlength="50">
                </div>

                <div class="mb-3">
                    <label for="Name" class="form-label">Ad</label>
                    <input type="text" class="form-control" id="Name" name="Form.Name" value="@Model.Form?.Name" required maxlength="200">
                </div>

                <div class="mb-3">
                    <label for="DefaultCulture" class="form-label">Varsayılan Dil</label>
                    <input type="text" class="form-control" id="DefaultCulture" name="Form.DefaultCulture" value="@Model.Form?.DefaultCulture" required maxlength="10">
                </div>

                <div class="mb-3">
                    <label for="TimeZoneId" class="form-label">Zaman Dilimi</label>
                    <input type="text" class="form-control" id="TimeZoneId" name="Form.TimeZoneId" value="@Model.Form?.TimeZoneId" maxlength="100">
                </div>

                <div class="mb-3">
                    <label for="Description" class="form-label">Açıklama</label>
                    <textarea class="form-control" id="Description" name="Form.Description" maxlength="500">@Model.Form?.Description</textarea>
                </div>

                <div class="d-flex gap-2">
                    @if (Model.IsNew)
                    {
                        <button type="submit" asp-page-handler="Create" class="btn btn-primary">Kaydet</button>
                    }
                    else
                    {
                        <input type="hidden" name="id" value="@Model.Application?.Id" />
                        <button type="submit" asp-page-handler="Update" class="btn btn-primary">Güncelle</button>

                        @if (Model.Application?.Id != 1)
                        {
                            <button type="submit" asp-page-handler="Delete" class="btn btn-danger" 
                                    onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</button>
                        }
                    }

                    <a href="/Definitions/Application" class="btn btn-secondary">Kapat</a>
                </div>
            </form>
        </div>
    </div>
</div>
