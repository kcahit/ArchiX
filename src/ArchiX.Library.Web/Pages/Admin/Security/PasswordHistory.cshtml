@page
@model ArchiX.Library.Web.Pages.Admin.Security.PasswordHistoryModel
@{
    ViewData["Title"] = "Password History";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <div>
            <h2 class="mb-0"><i class="fas fa-clock text-info me-2"></i>Password History</h2>
            <small class="text-muted">Application ID: @Model.ApplicationId</small>
        </div>
    </div>

    <div class="card form-section mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-search me-2"></i>Kullanýcý Arama</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label asp-for="Query" class="form-label">Kullanýcý ID</label>
                    <input asp-for="Query" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Query" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Take" class="form-label">Kayýt Sayýsý</label>
                    <input asp-for="Take" class="form-control" type="number" min="1" max="100" />
                    <span asp-validation-for="Take" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <input type="hidden" asp-for="ApplicationId" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-list me-1"></i> Listele
                        </button>
                        <a asp-page="/Admin/Security/PasswordHistory" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i> Temizle
                        </a>
                    </div>
                </div>
            </form>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-3" role="alert"></div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <span><i class="fas fa-history me-2"></i>Son Parola Kayýtlarý</span>
            @if (!string.IsNullOrWhiteSpace(Model.History.Query))
            {
                <small class="text-muted">Kullanýcý ID: @Model.History.Query</small>
            }
        </div>
        <div class="table-responsive">
            <table class="table table-sm table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:15%">User ID</th>
                        <th style="width:25%">Kullanýcý</th>
                        <th style="width:30%">Hash</th>
                        <th style="width:15%">Algoritma</th>
                        <th style="width:10%">Durum</th>
                        <th style="width:15%" class="text-end">Tarih</th>
                    </tr>
                </thead>
                <tbody>
                    @if (string.IsNullOrWhiteSpace(Model.History.Query))
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle fa-3x mb-3"></i>
                                <p>Detay görmek için üstten kullanýcý ID girin.</p>
                            </td>
                        </tr>
                    }
                    else if (!Model.History.Entries.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fas fa-exclamation-circle fa-3x mb-3"></i>
                                <p>Kayýt bulunamadý.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var entry in Model.History.Entries)
                        {
                            <tr>
                                <td><strong>@entry.UserId</strong></td>
                                <td><i class="fas fa-user me-1"></i>@entry.UserName</td>
                                <td><code class="small">@entry.MaskedHash</code></td>
                                <td><span class="badge bg-secondary">@entry.HashAlgorithm</span></td>
                                <td>
                                    <span class="badge @(entry.IsExpired ? "bg-secondary" : "bg-success")">
                                        @(entry.IsExpired ? "Expired" : "Active")
                                    </span>
                                </td>
                                <td class="text-end">@entry.CreatedAtUtc.ToLocalTime().ToString("g")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}