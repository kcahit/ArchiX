@page
@model ArchiX.Library.Web.Pages.Admin.Security.PasswordHistoryModel
@{
    ViewData["Title"] = "Password History";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <div>
            <h2 class="mb-0">Password History</h2>
            <small class="text-muted">Application ID: @Model.ApplicationId</small>
        </div>
        <div class="btn-group" role="group">
            <a asp-page="/Admin/Security/Index" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">Dashboard</a>
            <a asp-page="/Admin/Security/PolicySettings" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">Policy Settings</a>
            <a asp-page="/Admin/Security/AuditTrail" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">Audit Trail</a>
            <a asp-page="/Admin/Security/Blacklist" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">Blacklist</a>
            <a asp-page="/Admin/Security/PolicyTest" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">Policy Test</a>
            <a asp-page="/Admin/Security/PasswordPolicy" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">JSON Editörü</a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header">Kullanýcý Arama</div>
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label asp-for="Query" class="form-label">Kullanýcý ID</label>
                    <input asp-for="Query" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Query" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Take" class="form-label">Kayýt Sayýsý</label>
                    <input asp-for="Take" class="form-control" type="number" min="1" max="100" />
                    <span asp-validation-for="Take" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <input type="hidden" asp-for="ApplicationId" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Listele</button>
                        <a asp-page="/Admin/Security/PasswordHistory" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">Temizle</a>
                    </div>
                </div>
            </form>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-3" role="alert"></div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Son Parola Kayýtlarý</span>
            @if (!string.IsNullOrWhiteSpace(Model.History.Query))
            {
                <small class="text-muted">Kullanýcý ID: @Model.History.Query</small>
            }
        </div>
        <div class="table-responsive">
            <table class="table table-sm table-striped mb-0">
                <thead>
                    <tr>
                        <th style="width:15%">User ID</th>
                        <th style="width:25%">Kullanýcý</th>
                        <th style="width:30%">Hash</th>
                        <th style="width:15%">Algoritma</th>
                        <th style="width:10%">Durum</th>
                        <th style="width:15%" class="text-end">Tarih</th>
                    </tr>
                </thead>
                <tbody>
                @if (string.IsNullOrWhiteSpace(Model.History.Query))
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">Detay görmek için üstten kullanýcý ID girin.</td>
                    </tr>
                }
                else if (!Model.History.Entries.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">Kayýt bulunamadý.</td>
                    </tr>
                }
                else
                {
                    foreach (var entry in Model.History.Entries)
                    {
                        <tr>
                            <td>@entry.UserId</td>
                            <td>@entry.UserName</td>
                            <td class="font-monospace">@entry.MaskedHash</td>
                            <td>@entry.HashAlgorithm</td>
                            <td>
                                <span class="badge @(entry.IsExpired ? "bg-secondary" : "bg-success")">
                                    @(entry.IsExpired ? "Expired" : "Active")
                                </span>
                            </td>
                            <td class="text-end">@entry.CreatedAtUtc.ToLocalTime().ToString("g")</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
