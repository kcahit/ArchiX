@page
@model ArchiX.Library.Web.Pages.Admin.Security.AuditTrailModel
@{
    ViewData["Title"] = "Policy Audit Trail";
    string? oldJsonLiteral = null;
    string? newJsonLiteral = null;
    if (Model.SelectedDiff is not null)
    {
        oldJsonLiteral = System.Text.Json.JsonSerializer.Serialize(Model.SelectedDiff.OldJson ?? "{}");
        newJsonLiteral = System.Text.Json.JsonSerializer.Serialize(Model.SelectedDiff.NewJson ?? "{}");
    }
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between alignments-center mb-3 flex-wrap gap-2">
        <div>
            <h2 class="mb-0">Policy Audit Trail</h2>
            <small class="text-muted">Application ID: @Model.ApplicationId</small>
        </div>
        <div class="btn-group" role="group">
            <a asp-page="/Admin/Security/Index" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">Dashboard</a>
            <a asp-page="/Admin/Security/PolicySettings" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">Policy Settings</a>
            <a asp-page="/Admin/Security/Blacklist" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">Blacklist</a>
            <a asp-page="/Admin/Security/PasswordHistory" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">Password History</a>
            <a asp-page="/Admin/Security/PolicyTest" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">Policy Test</a>
            <a asp-page="/Admin/Security/PasswordPolicy" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary">JSON Editörü</a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header">Filtre</div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label asp-for="From" class="form-label">Baþlangýç Tarihi</label>
                    <input asp-for="From" class="form-control" type="date" />
                </div>
                <div class="col-md-3">
                    <label asp-for="To" class="form-label">Bitiþ Tarihi</label>
                    <input asp-for="To" class="form-control" type="date" />
                </div>
                <div class="col-md-3 align-self-end">
                    <input type="hidden" asp-for="ApplicationId" />
                    <button type="submit" class="btn btn-primary">Filtrele</button>
                    <a asp-page="/Admin/Security/AuditTrail" asp-route-applicationId="@Model.ApplicationId" class="btn btn-outline-secondary ms-2">Temizle</a>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header">Audit Kayýtlarý</div>
                <div class="table-responsive">
                    <table class="table table-sm table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Kullanýcý</th>
                                <th>Eylem</th>
                                <th style="width: 10%" class="text-end">Diff</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model.AuditEntries.Count == 0)
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">Kayýt bulunamadý.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var entry in Model.AuditEntries)
                            {
                                <tr class="@(Model.SelectedAuditId == entry.AuditId ? "table-active" : string.Empty)">
                                    <td>@entry.ChangedAt.ToLocalTime().ToString("g")</td>
                                    <td>@entry.UserDisplayName</td>
                                    <td>@entry.ActionSummary</td>
                                    <td class="text-end">
                                        <a asp-page="/Admin/Security/AuditTrail"
                                           asp-route-applicationId="@Model.ApplicationId"
                                           asp-route-from="@Model.From?.ToString("yyyy-MM-dd")"
                                           asp-route-to="@Model.To?.ToString("yyyy-MM-dd")"
                                           asp-route-selectedAuditId="@entry.AuditId"
                                           class="btn btn-sm btn-outline-primary">Diff</a>
                                    </td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card shadow-sm h-100">
                <div class="card-header">Deðiþiklik Detayý</div>
                <div class="card-body">
                    @if (Model.SelectedDiff is null)
                    {
                        <div class="text-muted">Soldan bir kayýt seçerek diff görüntüleyin.</div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <div class="fw-semibold">Old JSON</div>
                            <pre class="bg-light border rounded p-2 overflow-auto" style="max-height: 280px">@Model.SelectedDiff.OldJson</pre>
                        </div>
                        <div>
                            <div class="fw-semibold">New JSON</div>
                            <pre class="bg-light border rounded p-2 overflow-auto" style="max-height: 280px">@Model.SelectedDiff.NewJson</pre>
                        </div>
                        <div class="mt-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="fw-semibold">Görsel Diff</div>
                                    <small class="text-muted">jsondiffpatch</small>
                                </div>
                                <button type="button"
                                        class="btn btn-sm btn-outline-secondary"
                                        id="policy-json-export"
                                        data-audit-id="@Model.SelectedAuditId">
                                    JSON'u indir
                                </button>
                            </div>
                            <div id="policy-json-diff" class="jsondiffpatch-result border rounded bg-white overflow-auto" style="max-height: 320px"></div>
                            <script type="application/json" id="policy-json-old-data">@Html.Raw(oldJsonLiteral ?? "\"{}\"")</script>
                            <script type="application/json" id="policy-json-new-data">@Html.Raw(newJsonLiteral ?? "\"{}\"")</script>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @if (Model.SelectedDiff is not null)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jsondiffpatch@0.5.0/public/formatters-styles/html.css" integrity="sha384-gyRMxwvx6pRP70dNDO5qyxrppWdWwqzuqnBo7Q9LR4QW71oeG21zI8FqxNhfku5K" crossorigin="anonymous" />
        <style>
            .jsondiffpatch-result { font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, monospace; font-size: 0.9rem; }
            .jsondiffpatch-result pre { margin: 0; }
        </style>
        <script src="https://cdn.jsdelivr.net/npm/jsondiffpatch@0.5.0/public/build/jsondiffpatch.umd.min.js" integrity="sha384-rcP88GJ/GEGg8QUNsVq4fIv1pDcRAHkNBwAgF/5vrNWeWZXHQCt0nAl/4Q1pcH7j" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/jsondiffpatch@0.5.0/public/build/jsondiffpatch-formatters.min.js" integrity="sha384-i9DrnV9EoRrKVG+Va5Buz3vET/6en5I3Zz9NbcSwZLQJo+MZbn9l0JvcAz7PvRFM" crossorigin="anonymous"></script>
        <script>
            @Html.Raw("// @ts-nocheck\n")
            (function () {
                var container = document.getElementById('policy-json-diff');
                if (!container || typeof jsondiffpatch === 'undefined' || !jsondiffpatch.formatters || !jsondiffpatch.formatters.html) {
                    return;
                }

                var oldSource = document.getElementById('policy-json-old-data');
                var newSource = document.getElementById('policy-json-new-data');
                var oldJsonText = (oldSource && oldSource.textContent) ? oldSource.textContent : '{}';
                var newJsonText = (newSource && newSource.textContent) ? newSource.textContent : '{}';

                var oldObject;
                var newObject;

                try {
                    oldObject = JSON.parse(oldJsonText);
                    newObject = JSON.parse(newJsonText);
                }
                catch (err)
                {
                    container.textContent = 'JSON içeriði çözümlenemedi.';
                    return;
                }

                var delta = jsondiffpatch.diff(oldObject, newObject);
                if (!delta) {
                    container.textContent = 'Deðiþiklik bulunamadý.';
                }
                else {
                    var diffContent = jsondiffpatch.formatters.html.format(delta, oldObject);
                    container.innerHTML = '';
                    if (typeof diffContent === 'string') {
                        container.innerHTML = diffContent;
                    }
                    else if (typeof Node !== 'undefined' && diffContent instanceof Node) {
                        container.appendChild(diffContent);
                    }
                    else {
                        container.textContent = 'Diff görüntülenemedi.';
                    }
                }

                attachExport(oldObject, newObject);

                function attachExport(oldPolicy, newPolicy)
                {
                    var exportButton = document.getElementById('policy-json-export');
                    if (!exportButton || !oldPolicy || !newPolicy) {
                        return;
                    }

                    exportButton.addEventListener('click', function () {
                        var payload = {
                            auditId: exportButton.getAttribute('data-audit-id') || null,
                            generatedAtUtc: new Date().toISOString(),
                            oldPolicy: oldPolicy,
                            newPolicy: newPolicy
                        };

                        var blob = new Blob([JSON.stringify(payload, null, 2)], { type: 'application/json' });
                        var url = URL.createObjectURL(blob);
                        var anchor = document.createElement('a');
                        anchor.href = url;
                        anchor.download = 'password-policy-diff-' + (payload.auditId || 'current') + '.json';
                        document.body.appendChild(anchor);
                        anchor.click();
                        document.body.removeChild(anchor);
                        setTimeout(function () { URL.revokeObjectURL(url); }, 0);
                    });
                }
            })();
        </script>
    }
}
