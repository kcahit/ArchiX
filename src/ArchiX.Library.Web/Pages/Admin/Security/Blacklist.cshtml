@page
@model ArchiX.Library.Web.Pages.Admin.Security.BlacklistModel
@{
    ViewData["Title"] = "Blacklist Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <div>
            <h2 class="mb-0"><i class="fas fa-ban text-danger me-2"></i>Blacklist Yönetimi</h2>
            <small class="text-muted">Application ID: @Model.ApplicationId</small>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-xl-6">
            <div class="card form-section h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Tekil Kelime Ekle</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Add" class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="NewWord" class="form-label"></label>
                            <input asp-for="NewWord" class="form-control" autocomplete="off" />
                            <span asp-validation-for="NewWord" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 align-self-end d-flex gap-2">
                            <input type="hidden" asp-for="ApplicationId" />
                            <button type="submit" class="btn btn-primary flex-grow-1">
                                <i class="fas fa-save me-1"></i> Ekle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card form-section h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Toplu Kelime Ekle</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="BulkAdd" class="row g-3">
                        <div class="col-12">
                            <label asp-for="BulkWords" class="form-label"></label>
                            <textarea asp-for="BulkWords" rows="6" class="form-control" placeholder="Her satıra bir kelime yazın"></textarea>
                            <span asp-validation-for="BulkWords" class="text-danger"></span>
                            <small class="text-muted">Maksimum 100 kelime, minimum 2 karakter.</small>
                        </div>
                        <div class="col-12 d-flex gap-2 flex-wrap">
                            <input type="hidden" asp-for="ApplicationId" />
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="fas fa-upload me-1"></i> Toplu Ekle
                            </button>
                            <button type="reset" class="btn btn-link text-decoration-none">Temizle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center flex-wrap gap-2">
            <span><i class="fas fa-table me-2"></i>Blacklist (Toplam: @Model.Words.Count)</span>
            <a asp-page-handler="Export" asp-route-applicationId="@Model.ApplicationId" class="btn btn-sm btn-outline-secondary export-csv-btn">
                <i class="fas fa-download me-1"></i> CSV İndir
            </a>
        </div>
        <div class="table-responsive">
            <table id="blacklistTable" class="table table-sm table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:40%">Kelime</th>
                        <th style="width:25%">Ekleyen</th>
                        <th style="width:20%">Tarih</th>
                        <th style="width:15%" class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Words.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="text-muted text-center py-4">
                                <i class="fas fa-info-circle fa-2x mb-2"></i>
                                <p>Henüz kelime eklenmemiş.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var word in Model.Words)
                        {
                            <tr>
                                <td>
                                    <code class="fw-semibold">@word.Word</code>
                                    @if (!word.IsActive)
                                    {
                                        <span class="badge bg-secondary ms-2">Pasif</span>
                                    }
                                </td>
                                <td><i class="fas fa-user me-1"></i>@word.CreatedBy</td>
                                <td>@word.CreatedAtUtc.ToLocalTime().ToString("g")</td>
                                <td class="text-end">
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@word.Id" asp-route-applicationId="@Model.ApplicationId" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm(" Kelimeyi silmek istediğinizden emin misiniz?");" @(word.IsActive ? null : "disabled")>
                                            <i class="fas fa-trash me-1"></i> Sil
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            SecurityAdmin.initBlacklistDataTable();
        });
    </script>
}