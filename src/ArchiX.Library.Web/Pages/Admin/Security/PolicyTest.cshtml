@page
@model ArchiX.Library.Web.Pages.Admin.Security.PolicyTestModel
@{
    ViewData["Title"] = "Policy Test";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-3">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <div>
            <h2 class="mb-0"><i class="fas fa-flask text-success me-2"></i>Policy Test</h2>
            <small class="text-muted">Application ID: @Model.ApplicationId</small>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-6">
            <div class="card form-section h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-key me-2"></i>Parola Doğrulama</h5>
                </div>
                <div class="card-body">
                    <form method="post" class="row g-3">
                        <div class="col-12">
                            <label asp-for="Form.Password" class="form-label">Parola</label>
                            <input asp-for="Form.Password" class="form-control" autocomplete="off" id="testPassword" />
                            <span asp-validation-for="Form.Password" class="text-danger"></span>
                        </div>
                        <div class="col-12 d-flex align-items-center gap-3">
                            <input type="hidden" asp-for="ApplicationId" />
                            <button type="submit" class="btn btn-primary" id="validateBtn">
                                <i class="fas fa-check-circle me-1"></i> Test Et
                            </button>
                            @if (Model.Form.Result is not null)
                            {
                                <span class="badge @(Model.Form.Result.IsValid ? "bg-success" : "bg-danger")">
                                    @(Model.Form.Result.IsValid ? "Geçti" : "Hatalar var")
                                </span>
                            }
                        </div>
                    </form>

                    @if (Model.Form.Result is not null)
                    {
                        var strengthWidth = $"{Model.Form.Result.StrengthScore}%";
                        <hr />
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted small text-uppercase">Strength Score</span>
                                <span class="badge bg-secondary">@Model.Form.Result.StrengthScore / 100</span>
                            </div>
                            <div class="progress" style="height: 20px;">
                                <div id="strengthBar" class="progress-bar @(Model.Form.Result.StrengthScore >= 70 ? "bg-success" : Model.Form.Result.StrengthScore >= 40 ? "bg-warning" : "bg-danger")" role="progressbar" style="width:@strengthWidth" aria-valuenow="@Model.Form.Result.StrengthScore" aria-valuemin="0" aria-valuemax="100">
                                    @Model.Form.Result.StrengthScore%
                                </div>
                            </div>
                        </div>

                        <div id="rulesContainer">
                            @if (Model.Form.Result.Errors.Count > 0)
                            {
                                <div class="alert alert-warning">
                                    <div class="fw-semibold mb-2"><i class="fas fa-exclamation-triangle me-1"></i> Hata Kodları</div>
                                    <ul class="mb-0">
                                        @foreach (var error in Model.Form.Result.Errors)
                                        {
                                            <li class="rule-item text-danger">
                                                <i class="fas fa-times-circle me-1"></i> @error
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-success mb-0">
                                    <i class="fas fa-check-circle me-2"></i> Parola tüm kontrollerden geçti.
                                </div>
                            }
                        </div>

                        <div class="mt-3">
                            <div class="small text-muted">
                                <div><strong>History Check:</strong> @(Model.Form.Result.HistoryCheckResult.HasValue ? "❌ Tekrarlanan parola" : "✅ Geçti")</div>
                                @if (Model.Form.Result.PwnedCount > 0)
                                {
                                    <div class="text-danger"><strong>⚠ Pwned Count:</strong> @Model.Form.Result.PwnedCount (veri ihlalinde görüldü!)</div>
                                }
                                else
                                {
                                    <div><strong>Pwned Count:</strong> 0 (güvenli)</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Aktif Policy Özeti</h5>
                </div>
                <div class="card-body">
                    @if (Model.ActivePolicy is null)
                    {
                        <div class="text-muted text-center py-4">
                            <i class="fas fa-exclamation-circle fa-3x mb-3"></i>
                            <p>Policy yüklenemedi.</p>
                        </div>
                    }
                    else
                    {
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-ruler me-2 text-primary"></i><strong>Uzunluk:</strong> @Model.ActivePolicy.MinLength - @Model.ActivePolicy.MaxLength</li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle me-2 text-@(Model.ActivePolicy.RequireUpper ? "success" : "secondary")"></i>
                                <strong>Büyük Harf:</strong> @(Model.ActivePolicy.RequireUpper ? "Evet" : "Hayır")
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle me-2 text-@(Model.ActivePolicy.RequireLower ? "success" : "secondary")"></i>
                                <strong>Küçük Harf:</strong> @(Model.ActivePolicy.RequireLower ? "Evet" : "Hayır")
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle me-2 text-@(Model.ActivePolicy.RequireDigit ? "success" : "secondary")"></i>
                                <strong>Rakam:</strong> @(Model.ActivePolicy.RequireDigit ? "Evet" : "Hayır")
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle me-2 text-@(Model.ActivePolicy.RequireSymbol ? "success" : "secondary")"></i>
                                <strong>Sembol:</strong> @(Model.ActivePolicy.RequireSymbol ? "Evet" : "Hayır")
                            </li>
                            <li class="mb-2"><i class="fas fa-hashtag me-2 text-info"></i><strong>Min. farklı karakter:</strong> @Model.ActivePolicy.MinDistinctChars</li>
                            <li class="mb-2"><i class="fas fa-redo me-2 text-warning"></i><strong>Maks. tekrar:</strong> @Model.ActivePolicy.MaxRepeatedSequence</li>
                            <li class="mb-2"><i class="fas fa-history me-2 text-secondary"></i><strong>History:</strong> @Model.ActivePolicy.HistoryCount</li>
                            <li class="mb-2"><i class="fas fa-calendar me-2 text-danger"></i><strong>Max yaş (gün):</strong> @(Model.ActivePolicy.MaxPasswordAgeDays?.ToString() ?? "Sınırsız")</li>
                            <li class="mb-2"><i class="fas fa-asterisk me-2 text-dark"></i><strong>Allowed Symbols:</strong> <code>@Model.ActivePolicy.AllowedSymbols</code></li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            SecurityAdmin.initPolicyTestValidation();
        });
    </script>
}