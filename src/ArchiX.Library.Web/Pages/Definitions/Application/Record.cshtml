@page "/Definitions/Application/Record"
@model ArchiX.Library.Web.Pages.Definitions.Application.RecordModel
@{
    ViewData["Title"] = Model.IsNew ? "Yeni Application" : "Application Düzenle";
    Layout = "~/Templates/Modern/Pages/Shared/_Layout.cshtml";
}

<div id="tab-main">
<div class="container py-1">
    <form method="post" id="recordForm" data-form-dirty="false">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
        <div class="card">
            <div class="card-body">
                @if (!Model.IsNew)
                {
                    <input type="hidden" name="id" value="@Model.Application!.Id" />
                }

                    <div class="mb-3">
                        <label asp-for="Form.Code" class="form-label">Kod</label>
                        <input asp-for="Form.Code" class="form-control" />
                        <span asp-validation-for="Form.Code" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Form.Name" class="form-label">Ad</label>
                        <input asp-for="Form.Name" class="form-control" />
                        <span asp-validation-for="Form.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Form.DefaultCulture" class="form-label">Varsayılan Dil</label>
                        <input asp-for="Form.DefaultCulture" class="form-control" />
                        <span asp-validation-for="Form.DefaultCulture" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Form.TimeZoneId" class="form-label">Zaman Dilimi</label>
                        <input asp-for="Form.TimeZoneId" class="form-control" />
                        <span asp-validation-for="Form.TimeZoneId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Form.Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Form.Description" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Form.Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        @if (Model.IsNew)
                        {
                            <button type="submit" asp-page-handler="Create" class="btn btn-primary">Kaydet</button>
                        }
                        else
                        {
                            <button type="submit" asp-page-handler="Update" class="btn btn-primary">Güncelle</button>

                            @if (Model.Application?.Id != 1)
                            {
                                <button type="submit" asp-page-handler="Delete" class="btn btn-danger"
                                        onclick="return confirm('ID @Model.Application?.Id numaralı kaydı silmek istediğinizden emin misiniz?')">Sil</button>
                            }
                        }

                        <button type="button" class="btn btn-secondary" onclick="closeRecordForm()">Kapat</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script>
        console.log('[Record Form INIT] Script yüklendi - timestamp:', Date.now());
        
        (function() {
            const form = document.getElementById('recordForm');
            console.log('[Record Form INIT] Form bulundu:', !!form, form);
            
            if (!form) {
                console.error('[Record Form INIT] ERROR: recordForm bulunamadı!');
                return;
            }

            let isSubmitting = false;

            // Track form changes
            form.addEventListener('input', function() {
                form.setAttribute('data-form-dirty', 'true');
            });

            // Intercept form submit for AJAX (accordion içindeyse)
            form.addEventListener('submit', function(e) {
                console.log('[Record Form] Submit event tetiklendi');
                
                const accordionEl = document.querySelector('.accordion[id^="grid-record-accordion"]');
                console.log('[Record Form] Accordion element:', accordionEl, 'display:', accordionEl?.style?.display);
                
                if (!accordionEl || !accordionEl.style.display || accordionEl.style.display === 'none') {
                    console.log('[Record Form] Accordion görünür değil - normal submit');
                    return; // Normal submit (standalone page)
                }

                console.log('[Record Form] Accordion içinde - AJAX submit başlıyor');
                e.preventDefault();
                isSubmitting = true;

                const formData = new FormData(form);
                const submitButton = e.submitter;
                if (submitButton && submitButton.name) {
                    formData.append(submitButton.name, submitButton.value || '');
                }

                // AJAX submit
                console.log('[Record Form] Submit başlıyor...');
                console.log('[Record Form] Aktif tab:', window.ArchiX?.TabHost?.getCurrentTabUrl?.());
                
                fetch(form.action || window.location.href, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'X-ArchiX-Tab': '1'
                    }
                })
                .then(res => {
                    console.log('[Record Form] Response:', res.status, res.ok);
                    if (res.ok) {
                        // Success: accordion'u kapat ve parent tab'ı reload et
                        console.log('[Record Form] Success - accordion kapatılıyor...');
                        
                        // Accordion'u kapat
                        const accordionBody = accordionEl.querySelector('.accordion-collapse');
                        if (accordionBody && window.bootstrap?.Collapse) {
                            const bsCollapse = window.bootstrap.Collapse.getInstance(accordionBody);
                            if (bsCollapse) bsCollapse.hide();
                        }
                        
                        // Accordion'un içinde olduğu tab pane'i bul
                        let parentPane = accordionEl.closest('.tab-pane[data-tab-id]');
                        console.log('[Record Form] Parent pane bulundu:', !!parentPane);
                        
                        if (parentPane) {
                            let tabId = parentPane.getAttribute('data-tab-id');
                            console.log('[Record Form] Parent tab ID:', tabId);
                            
                            // Eğer group tab ise (g_ ile başlıyorsa), içindeki aktif child tab'ı bul
                            if (tabId && tabId.startsWith('g_')) {
                                console.log('[Record Form] Group tab tespit edildi, aktif child arıyor...');
                                
                                // Nested panes container'ı bul
                                const nestedPanes = parentPane.querySelector('[data-archix-nested-panes]');
                                console.log('[Record Form] Nested panes bulundu:', !!nestedPanes);
                                
                                if (nestedPanes) {
                                    // Nested tab'lar data-nested-tab-id kullanıyor!
                                    const activeChildPane = nestedPanes.querySelector('.tab-pane.active[data-nested-tab-id]');
                                    console.log('[Record Form] Active child pane bulundu:', !!activeChildPane, activeChildPane);
                                    
                                    if (activeChildPane) {
                                        const childTabId = activeChildPane.getAttribute('data-nested-tab-id');
                                        console.log('[Record Form] Aktif child tab ID (nested):', childTabId);
                                        tabId = childTabId;
                                    } else {
                                        console.log('[Record Form] WARNING: Active child yok, ilk child alınıyor...');
                                        // Fallback: İlk nested tab-pane'i al
                                        const firstPane = nestedPanes.querySelector('.tab-pane[data-nested-tab-id]');
                                        if (firstPane) {
                                            tabId = firstPane.getAttribute('data-nested-tab-id');
                                            console.log('[Record Form] Fallback: İlk child tab ID:', tabId);
                                        } else {
                                            console.log('[Record Form] ERROR: Hiç nested tab-pane bulunamadı!');
                                        }
                                    }
                                } else {
                                    console.log('[Record Form] ERROR: Nested panes container bulunamadı!');
                                }
                            }
                            
                            // Bu tab'ın URL'ini bul ve reload et
                            if (window.ArchiX?.TabHost?.reloadTabById) {
                                console.log('[Record Form] reloadTabById() çağrılıyor...', tabId);
                                // Nested tab için URL explicitly geç
                                const reloadUrl = '/Definitions/Application';
                                window.ArchiX.TabHost.reloadTabById(tabId, reloadUrl);
                            } else {
                                console.log('[Record Form] Fallback: pane içeriğini manuel yenile');
                                window.location.href = '/Definitions/Application';
                            }
                        } else {
                            console.log('[Record Form] ERROR: Parent pane bulunamadı, fallback redirect');
                            window.location.href = '/Definitions/Application';
                        }
                    } else {
                        return res.text().then(html => {
                            // Validation error: show in accordion
                            isSubmitting = false;
                            const contentId = accordionEl.id.replace('grid-record-accordion-', '') + '-content';
                            const contentEl = document.getElementById(contentId);
                            if (contentEl) {
                                const parser = new DOMParser();
                                const doc = parser.parseFromString(html, 'text/html');
                                const main = doc.querySelector('#tab-main');
                                if (main) contentEl.innerHTML = main.innerHTML;
                            }
                        });
                    }
                })
                .catch(err => {
                    alert('Kayıt hatası: ' + err.message);
                    isSubmitting = false;
                });
            });

            window.closeRecordForm = function() {
                if (isSubmitting) return;

                const isDirty = form.getAttribute('data-form-dirty') === 'true';
                
                if (isDirty) {
                    const result = confirm('Değişiklikler kaydedilmedi. Formu kapatmak istediğinize emin misiniz?');
                    if (!result) return;
                }

                const accordionEl = document.querySelector('.accordion[id^="grid-record-accordion"]');
                if (accordionEl) {
                    const accordionBody = accordionEl.querySelector('.accordion-collapse');
                    if (accordionBody && window.bootstrap?.Collapse) {
                        const bsCollapse = window.bootstrap.Collapse.getInstance(accordionBody);
                        if (bsCollapse) {
                            bsCollapse.hide();
                            setTimeout(() => { 
                                accordionEl.style.display = 'none';
                                form.reset();
                                form.setAttribute('data-form-dirty', 'false');
                            }, 300);
                            return;
                        }
                    }
                }
                window.location.href = '/Definitions/Application';
            };
        })();
    </script>
</div>
