@page
@model ArchiX.Library.Web.Templates.Modern.Pages.LogoutModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Oturum Sonlandırıldı - ArchiX</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .logout-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            padding: 60px 40px;
            text-align: center;
            max-width: 500px;
            width: 90%;
        }
        .logout-icon {
            font-size: 80px;
            color: #dc3545;
            margin-bottom: 30px;
        }
        h1 {
            color: #333;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 20px;
        }
        p {
            color: #666;
            font-size: 16px;
            margin-bottom: 40px;
        }
        .btn-reconnect {
            background: #667eea;
            color: white;
            border: none;
            padding: 14px 40px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }
        .btn-reconnect:hover {
            background: #5568d3;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        }
    </style>
</head>
<body>
    <div class="logout-container">
        <div class="logout-icon">🔒</div>
        <h1>Oturumunuz Sonlandırıldı</h1>
        <p>Güvenliğiniz için oturumunuz kapatıldı. Sisteme erişmek için yeniden giriş yapmalısınız.</p>
        <a href="/Login?reason=@Model.Reason" class="btn-reconnect">Yeniden Bağlan</a>
    </div>
    <script>
        // Clear all session/local storage (prevent any access)
        sessionStorage.clear();
        localStorage.removeItem('archix-session-active');
        
        // Disable back button
        history.pushState(null, '', location.href);
        window.onpopstate = function () {
            history.pushState(null, '', location.href);
        };
    </script>
</body>
</html>
