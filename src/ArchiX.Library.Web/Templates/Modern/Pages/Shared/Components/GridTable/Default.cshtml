@model ArchiX.Library.Web.ViewModels.Grid.GridTableViewModel
@using System
@using System.Linq
@using System.Text.Json
@using ArchiX.Library.Web.ViewModels.Grid

@{
    var options = new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase };
    var jsonData = JsonSerializer.Serialize(Model.Rows ?? Enumerable.Empty<IDictionary<string, object?>>(), options);
    var jsonColumns = JsonSerializer.Serialize(Model.Columns ?? Array.Empty<GridColumnDefinition>(), options);
    var tableId = Model.Id ?? "gridTable";
}

<link rel="stylesheet" href="~/css/archix.grid.shared.css" />

<div class="grid-page">
    <div class="container grid-shell" id="@tableId-container">
        <div class="table-container">
            <div class="table-header">
                <div class="d-flex justify-content-between align-items-center gap-2 mb-3">
                    <div class="d-flex align-items-center gap-2">
                        <span class="text-muted grid-record-count">(<strong><span id="@tableId-totalRecords">0</span></strong> Kayýt)</span>
                    </div>

                    <div class="d-flex align-items-center gap-2 flex-grow-1">
                        <div class="search-box flex-grow-1">
                            <i class="bi bi-search"></i>
                            <input type="text" class="form-control form-control-sm grid-search-input" id="@tableId-searchInput" placeholder="@Model.SearchPlaceholder">
                        </div>
                        <button class="btn btn-primary btn-sm grid-btn-reset" onclick="resetAllFilters('@tableId')" title="@Model.ResetText">
                            <i class="bi bi-arrow-clockwise text-white"></i>
                        </button>
                    </div>

                    <div class="mx-3">
                        <button class="btn btn-outline-primary btn-sm grid-btn-advanced" type="button" data-bs-toggle="collapse" data-bs-target="#@tableId-advancedSearch">
                            <i class="bi bi-sliders me-1"></i> @Model.AdvancedSearchText
                        </button>
                    </div>

                    <div class="ms-auto">
                        <div class="dropdown">
                            <button class="btn btn-primary btn-sm dropdown-toggle grid-btn-export" type="button" id="@tableId-exportDropdown" data-bs-toggle="dropdown">
                                <i class="bi bi-download me-1"></i> @Model.ExportText
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#" onclick="exportData('excel','@tableId')"><i class="bi bi-file-earmark-excel me-2"></i>Excel</a></li>
                                <li><a class="dropdown-item" href="#" onclick="exportData('pdf','@tableId')"><i class="bi bi-file-earmark-pdf me-2"></i>PDF</a></li>
                                <li><a class="dropdown-item" href="#" onclick="exportData('csv','@tableId')"><i class="bi bi-filetype-csv me-2"></i>CSV</a></li>
                                <li><a class="dropdown-item" href="#" onclick="exportData('txt','@tableId')"><i class="bi bi-file-text me-2"></i>TXT</a></li>
                                <li><a class="dropdown-item" href="#" onclick="exportData('json','@tableId')"><i class="bi bi-filetype-json me-2"></i>JSON</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="collapse mb-3" id="@tableId-advancedSearch">
                <div class="card advanced-search-card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="column-selector-panel">
                                    <h6 class="column-selector-title">
                                        <span class="column-selector-title-group">
                                            <input type="checkbox" class="column-selector-toggle" id="@tableId-toggleAllColumns" onchange="toggleAllColumns('@tableId')" title="Hepsi/Hiçbiri">
                                            Kolonlar
                                        </span>
                                        <button onclick="clearAdvancedFilters('@tableId')" class="btn-advanced-clear" title="Geliþmiþ Filtreleri Temizle">
                                            Temizle
                                        </button>
                                    </h6>
                                    <div id="@tableId-columnCheckList"></div>
                                </div>
                            </div>
                            <div class="col-md-10">
                                <div id="@tableId-slicerContainer">
                                    <div id="@tableId-noSlicerMsg" class="grid-no-slicer">
                                        <i class="bi bi-arrow-left"></i> Soldaki listeden kolon seçin
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="@tableId-activeFilters">
                <div class="accordion mb-3" id="@tableId-filterAccordion">
                    <div class="accordion-item active-filter-card">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed active-filter-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#@tableId-collapseFilters">
                                <i class="bi bi-funnel-fill me-2"></i>
                                <strong>Aktif Filtreler (<span id="@tableId-filterCount">0</span>)</strong>
                            </button>
                        </h2>
                        <div id="@tableId-collapseFilters" class="accordion-collapse collapse">
                            <div class="accordion-body filter-accordion-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div id="@tableId-filterTags"></div>
                                    <div class="d-flex flex-column gap-2 ms-3">
                                        <button class="btn btn-sm btn-outline-secondary filter-manage-btn" onclick="resetAllFilters('@tableId')">
                                            <i class="bi bi-trash"></i> Tümünü Temizle
                                        </button>
                                        <button class="btn btn-sm btn-outline-primary filter-manage-btn" onclick="toggleAllFilterAccordions('@tableId')" id="@tableId-toggleAllBtn">
                                            <i class="bi bi-chevron-down"></i> Hepsini Aç
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive grid-table-responsive">
                <table class="table table-hover custom-table" id="@tableId-dataTable">
                    <thead>
                        <tr>
                            @foreach (var col in Model.Columns)
                            {
                                var field = col.Field;
                                var title = col.Title;
                                var numericClass = col.DataType?.Equals("number", StringComparison.OrdinalIgnoreCase) == true ? "grid-col-number" : string.Empty;
                                <th class="@numericClass" @(col.Width != null ? $"style=\"width:{col.Width}\"" : "")>
                                    <div class="header-content">
                                        @if (col.Sortable)
                                        {
                                            <span class="header-text" onclick="sortTable('@tableId','@field')">
                                                @title <i class="bi bi-arrow-down-up sort-icon"></i>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="header-text">@title</span>
                                        }
                                        @if (col.Filterable)
                                        {
                                            <span class="filter-icon" onclick="toggleFilter('@tableId','@field', arguments[0])">
                                                <i class="bi bi-funnel"></i>
                                                <span class="filter-count" id="@tableId-count-@field">0</span>
                                            </span>
                                        }
                                    </div>
                                    @if (col.Filterable)
                                    {
                                        <div class="filter-dropdown" id="@tableId-filter-@field"></div>
                                    }
                                </th>
                            }
                            @if (Model.ShowActions)
                            {
                                <th>Ýþlemler</th>
                            }
                        </tr>
                    </thead>
                    <tbody id="@tableId-tableBody"></tbody>
                </table>
            </div>

            <div class="pagination-container grid-pagination-container">
                <div class="d-flex justify-content-between align-items-baseline w-100">
                    <div class="showing-info">
                        <span id="@tableId-showingInfo" class="grid-showing-info">Gösteriliyor: 0-0 / 0</span>
                    </div>
                    <nav class="grid-pagination-nav">
                        <ul class="pagination pagination-sm mb-0" id="@tableId-pagination"></ul>
                    </nav>
                    <div class="d-flex align-items-center gap-2">
                        <label class="mb-0 grid-pagination-label">Sayfa baþýna:</label>
                        <select class="form-select form-select-sm grid-items-select" id="@tableId-itemsPerPageSelect" onchange="changeItemsPerPage('@tableId')">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/archix.grid.component.js"></script>
<script>
    window.gridTables = window.gridTables || {};
    window.gridTables['@tableId'] = {
        data: @Html.Raw(jsonData),
        columns: @Html.Raw(jsonColumns)
    };
    if (window.initGridTable) {
        window.initGridTable('@tableId', window.gridTables['@tableId'].data, window.gridTables['@tableId'].columns);
    }
</script>
