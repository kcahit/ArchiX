@model ArchiX.Library.Web.ViewModels.Grid.GridToolbarViewModel

@* moved from `Shared/Components/GridToolbar/Default.cshtml` *@

<div class="table-header">
    <div class="d-flex justify-content-between align-items-center gap-2 mb-3">
        <div class="d-flex align-items-center gap-2">
            @await Component.InvokeAsync("DatasetSelector", new ArchiX.Library.Web.ViewModels.Grid.DatasetSelectorViewModel
            {
                Id = Model.Id,
                IsVisible = Model.ShowDatasetSelector,
                Options = Model.DatasetOptions,
                SelectedReportDatasetId = Model.SelectedReportDatasetId,
                RunEndpoint = Model.RunReportEndpoint,
                RunText = Model.RunReportText,
                Placeholder = Model.DatasetPlaceholder,
                Mode = ArchiX.Library.Web.ViewModels.Grid.DatasetSelectorMode.GridMultiRow
            })

            <span class="text-muted grid-record-count ms-1">(<strong><span id="@Model.Id-totalRecords">@Model.TotalRecords</span></strong> Kayıt)</span>
        </div>

        <div class="d-flex align-items-center gap-2 flex-grow-1">
            <div class="search-box flex-grow-1">
                <i class="bi bi-search"></i>
                <input type="text" class="form-control form-control-sm grid-search-input" id="@Model.Id-searchInput" placeholder="@Model.SearchPlaceholder">
            </div>
            <button class="btn btn-primary btn-sm grid-btn-reset" onclick="resetAllFilters('@Model.Id')" title="@Model.ResetText">
                <i class="bi bi-arrow-clockwise text-white"></i>
            </button>
        </div>

        @if (Model.ShowAdvancedSearch)
        {
            <div class="mx-3">
                <button class="btn btn-outline-primary btn-sm grid-btn-advanced" type="button" onclick="toggleAdvancedSearch('@Model.Id')">
                    <i class="bi bi-sliders me-1"></i> @Model.AdvancedSearchText
                </button>
            </div>
        }

        @if (Model.ShowDeletedToggle)
        {
            <div class="form-check ms-2">
                <input class="form-check-input" type="checkbox" id="@Model.Id-showDeleted" 
                       @(Context.Request.Query["includeDeleted"] == "1" ? "checked" : "")
                       onchange="toggleIncludeDeleted('@Model.Id')">
                <label class="form-check-label" for="@Model.Id-showDeleted">
                    Silinmişleri Göster
                </label>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.RecordEndpoint) && Model.IsFormOpenEnabled == 1)
        {
            <button class="btn btn-success btn-sm ms-2" onclick="openNewRecord('@Model.Id', '@Model.RecordEndpoint')">
                <i class="bi bi-plus-circle me-1"></i> Yeni Kayıt
            </button>
        }

        @if (Model.ShowExport)
        {
            <div class="ms-auto">
                <div class="dropdown">
                    <button class="btn btn-primary btn-sm dropdown-toggle grid-btn-export" type="button" id="@Model.Id-exportDropdown" data-bs-toggle="dropdown">
                        <i class="bi bi-download me-1"></i> @Model.ExportText
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#" onclick="exportData('excel','@Model.Id')"><i class="bi bi-file-earmark-excel me-2"></i>Excel</a></li>
                        <li><a class="dropdown-item" href="#" onclick="exportData('pdf','@Model.Id')"><i class="bi bi-file-earmark-pdf me-2"></i>PDF</a></li>
                        <li><a class="dropdown-item" href="#" onclick="exportData('csv','@Model.Id')"><i class="bi bi-filetype-csv me-2"></i>CSV</a></li>
                        <li><a class="dropdown-item" href="#" onclick="exportData('txt','@Model.Id')"><i class="bi bi-file-text me-2"></i>TXT</a></li>
                        <li><a class="dropdown-item" href="#" onclick="exportData('json','@Model.Id')"><i class="bi bi-filetype-json me-2"></i>JSON</a></li>
                    </ul>
                </div>
            </div>
        }
    </div>

    @if (Model.IncludeAdvancedSearchPanel)
    {
        <div class="collapse mb-3" id="@Model.Id-advancedSearch">
            <div class="card advanced-search-card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="column-selector-panel">
                                <h6 class="column-selector-title">
                                    <span class="column-selector-title-group">
                                        <input type="checkbox" class="column-selector-toggle" id="@Model.Id-toggleAllColumns" onchange="toggleAllColumns('@Model.Id')" title="Hepsi/Hiçbiri">
                                        Kolonlar
                                    </span>
                                    <button onclick="clearAdvancedFilters('@Model.Id')" class="btn-advanced-clear" title="Gelişmiş Filtreleri Temizle">
                                        Temizle
                                    </button>
                                </h6>
                                <div id="@Model.Id-columnCheckList"></div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div id="@Model.Id-slicerContainer">
                                <div id="@Model.Id-noSlicerMsg" class="grid-no-slicer">
                                    <i class="bi bi-arrow-left"></i> Soldaki listeden kolon seçin
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function toggleIncludeDeleted(gridId) {
        const checkbox = document.getElementById(`${gridId}-showDeleted`);
        if (!checkbox) return;
        
        let currentPath = window.location.pathname;
        if (window.ArchiX?.TabHost?.getCurrentTabUrl) {
            const tabUrl = window.ArchiX.TabHost.getCurrentTabUrl();
            if (tabUrl) {
                const url = new URL(tabUrl, window.location.origin);
                currentPath = url.pathname;
            }
        }
        
        const params = new URLSearchParams(window.location.search);
        
        if (checkbox.checked) {
            params.set('includeDeleted', '1');
        } else {
            params.delete('includeDeleted');
        }
        
        const newUrl = params.toString() ? `${currentPath}?${params.toString()}` : currentPath;
        
        if (window.ArchiX?.TabHost?.reloadCurrentTab) {
            window.ArchiX.TabHost.reloadCurrentTab(newUrl);
        } else {
            window.location.href = newUrl;
        }
    }

    function openNewRecord(gridId, recordEndpoint) {
        if (window.showRecordInAccordion) {
            window.showRecordInAccordion(gridId, recordEndpoint, 'Yeni Application');
        } else {
            window.location.href = recordEndpoint;
        }
    }
</script>
