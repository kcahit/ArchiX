@using Microsoft.AspNetCore.Mvc.ViewFeatures
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var requestToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
    var pageTitle = ViewData["Title"]?.ToString() ?? "Giriþ";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="RequestVerificationToken" content="@requestToken" />
    <title>@pageTitle - ArchiX</title>

    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <!-- Modern Template CSS -->
    <link rel="stylesheet" href="~/css/modern/main.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="auth-body">
    <!-- Auth Container -->
    <div class="auth-container">
        @RenderBody()
    </div>

    <!-- Footer (minimal for auth pages) -->
    <footer class="auth-footer">
        <div class="container text-center">
            <span class="text-muted">&copy; @DateTime.Now.Year ArchiX - Tüm haklarý saklýdýr.</span>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
