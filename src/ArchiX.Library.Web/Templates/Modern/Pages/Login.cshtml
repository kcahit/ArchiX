@page "/Login"
@model ArchiX.Library.Web.Templates.Modern.Pages.LoginModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "GİRİŞ";
}

<div class="container">
    <div class="login-container">
        <div class="row g-0">
            <div class="col-md-7 login-image d-md-flex">
                @* <i class="bi bi-shield-lock-fill"></i> *@
                @*    <img src="~/images/login.jpg" alt="ArchiX Logo" class="login-logo" /> *@
                <img src="~/images/login.jpg" alt="ArchiX Logo" class="login-logo" style="max-width: 500px !important; width: 100%;" />
                <h4>Hoş Geldiniz!</h4>
                <p>Hesabınıza giriş yaparak tüm özelliklere erişebilirsiniz.</p>
            </div>

            <div class="col-md-5 login-form">
                @*    <h3>Giriş Yap</h3> *@
                @* <p class="text-muted small mb-0">Hesabınıza giriş yapmak için bilgilerinizi girin</p> *@

                <form id="loginForm" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    @* <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div> *@

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">E-posta</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope-fill"></i>
                            </span>
                            <input asp-for="Input.Email" class="form-control" placeholder="ornek@email.com" autocomplete="username" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Şifre</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock-fill"></i>
                            </span>
                            <input asp-for="Input.Password" type="password" class="form-control" id="password"
                                   placeholder="••••••••" autocomplete="current-password" />
                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                Beni hatırla
                            </label>
                        </div>
                        <a href="#" class="text-end">Şifremi unuttum?</a>
                    </div>

                    <button type="submit" class="btn btn-login w-100">
                        <i class="bi bi-shield-lock-fill"></i>
                        @* <i class="bi bi-box-arrow-in-right me-2"></i> *@
                        Giriş Yap

                    </button>
                </form>

                <!-- SOSYAL MEDYA GİRİŞİ kapattım.

                   <div class="divider">
                    <span>veya</span>
                   </div>

                  <div class="social-login">
                        @* mb-1 *@
                        <button class="social-btn" type="button" title="Google ile giriş">
                            <i class="bi bi-google google"></i>
                        </button>
                        <button class="social-btn" type="button" title="Facebook ile giriş">
                            <i class="bi bi-facebook facebook"></i>
                        </button>
                        <button class="social-btn" type="button" title="Twitter ile giriş">
                            <i class="bi bi-twitter twitter"></i>
                        </button>
                    </div>


                     @* Şİfre değişikliği yapılıyor *@
                    <div class="text-center">
                        <p class="mb-0">Şifreyi Değiştir  <a href="#" class="fw-bold">Kayıt Ol</a></p>
                        <@* a href="#" class="fw-bold">Şifreyi Değiştir</a> *@
                    </div>

                -->
                <!-- Footer inside card -->
                <div class="text-center mt-4 pt-3 border-top">
                    <p class="text-muted small mb-0">&copy; @DateTime.Now.Year ArchiX - Tüm hakları saklıdır.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Clear any previous session on login page load
        sessionStorage.removeItem('archix-session-active');

        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');

        if (togglePassword && passwordInput) {
            togglePassword.addEventListener('click', function() {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);

                const icon = this.querySelector('i');
                icon.classList.toggle('bi-eye');
                icon.classList.toggle('bi-eye-slash');
            });
        }

        document.querySelectorAll('.social-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const platform = this.querySelector('i').classList.contains('bi-google') ? 'Google' :
                               this.querySelector('i').classList.contains('bi-facebook') ? 'Facebook' : 'Twitter';
                alert(platform + ' ile giriş yapılıyor...');
            });
        });

        // On successful login (form submit), set session active
        const loginForm = document.getElementById('loginForm');
        if (loginForm) {
            loginForm.addEventListener('submit', function() {
                sessionStorage.setItem('archix-session-active', 'true');
            });
        }
    </script>
}